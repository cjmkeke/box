<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".boxSave">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:drawableStart="@drawable/images"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font"
            android:gravity="center_vertical"
            android:text="DB 검색" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/textview_shape_search"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="검색어"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:background="@drawable/textview_shape_search"
            android:text="검색" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/board_tv_0"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:drawableStart="@drawable/images"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font"
            android:gravity="center_vertical"
            android:text="코드 / 품명" />

        <TextView
            android:id="@+id/board_tv_view_0"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/textview_shape_code"
            android:ems="10"
            android:fontFamily="@font/font"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/board_tv_1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:drawableStart="@drawable/images"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font"
            android:gravity="center_vertical"
            android:text="박스 수량" />

        <TextView
            android:id="@+id/board_tv_view_1"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/textview_shape"
            android:ems="10"
            android:fontFamily="@font/font"
            android:paddingStart="10dp"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/board_tv_2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:drawableStart="@drawable/images"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font"
            android:gravity="center_vertical"
            android:text="박스 개입수" />

        <TextView
            android:id="@+id/board_tv_view_2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/textview_shape"
            android:ems="10"
            android:fontFamily="@font/font"
            android:paddingStart="10dp"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/board_tv_3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:drawableStart="@drawable/images"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font"
            android:gravity="center_vertical"
            android:text="박스 잔량" />

        <TextView
            android:id="@+id/board_tv_view_3"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/textview_shape"
            android:ems="10"
            android:fontFamily="@font/font"
            android:paddingStart="10dp"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/board_tv_4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:drawableStart="@drawable/images"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font"
            android:gravity="center_vertical"
            android:text="파렛트 수량" />

        <TextView
            android:id="@+id/board_tv_view_4"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/textview_shape"
            android:ems="10"
            android:fontFamily="@font/font"
            android:paddingStart="10dp"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/board_tv_5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:drawableStart="@drawable/images"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font"
            android:gravity="center_vertical"
            android:text="empty" />

        <TextView
            android:id="@+id/board_tv_view_5"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/textview_shape"
            android:ems="10"
            android:fontFamily="@font/font"
            android:paddingStart="10dp"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/board_tv_6"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:drawableStart="@drawable/images"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font"
            android:gravity="center_vertical"
            android:text="empty" />

        <TextView
            android:id="@+id/board_tv_view_6"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/textview_shape"
            android:ems="10"
            android:fontFamily="@font/font"
            android:paddingStart="10dp"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/board_tv_7"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:drawableStart="@drawable/images"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font"
            android:gravity="center_vertical"
            android:text="empty" />

        <TextView
            android:id="@+id/board_tv_view_7"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/textview_shape"
            android:ems="10"
            android:fontFamily="@font/font"
            android:paddingStart="10dp"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="51dp"
            android:background="@drawable/button_selector_orenge"
            android:textColor="@color/white"
            android:text="뒤로가기" />

    </RelativeLayout>
</LinearLayout>